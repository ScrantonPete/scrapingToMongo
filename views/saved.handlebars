<!--Stored Article Page-->

<div class="savedArt articles">
    <ul>
        {{#each articles }}
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">{{title}}</h3>
            </div>
            <div class="panel-body">
                <a class="artLink" href={{link}}>{{link}}</a>
                <!--ADD NOTES button-->

                <button data-id={{_id}} class="btn btn-danger pull-right removeSaved">Remove Saved Article</button>

                <button data-id={{_id}} class="btn btn-primary pull-right saved-buttons" id="addCheckNote"
                    data-toggle="modal" data-target="#noteModal" data-value="{{this._id}}">View and Add Notes</button>
            </div>
        </div>
        <br />
        <br />


        <!-- Modal -->
        <div id="noteModal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="noteModalLabel"
            aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <!--title including the id of the current article-->
                        <h4 class="modal-title" id=""><b>Notes:</b></h4>
                        <!--where notes will be displayed-->
                        <div>
                            <ul id="notesBody">

                            </ul>
                        </div>
                    </div>
                    <div class="modal-body">
                        <div class="form-group">

                            <label for="exampleTextarea">Enter a New Note</label>
                            <!--enter note text-->
                            <textarea class="form-control" id="notestext" rows="3"></textarea>
                        </div>
                        <div>
                            <!--enter saved notes here-->
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button data-id={{_id}} data-dismiss="modal" id="saveButton"
                            class="btn btn-primary savenote">Save all changes</button>
                    </div>
                </div>
            </div>
        </div>

        {{/each}}
    </ul>

</div>